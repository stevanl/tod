<%= image_tag('/images/byps-banner.png') %>

<div style="position:relative;height: 44px">
  <div id="nav-box-wrapper">
    <div class="nav-box" id="nav-box">
      <div class="nav-top">
        <ul class="pills" data-tabs="tabs">
          <li class="<%= "active" if params[:action] == 'index' %>"> <%= link_to 'Home', root_path %> </li>
          <li class="<%= "active" if params[:action] == 'dinner' %>"> <%= link_to 'Gala Dinner', dinner_path %> </li>
          <li class="<%= "active" if params[:action] == 'new' && params[:controller] == 'replies' %>"><%= link_to 'Reply', new_reply_path %></li>
          <li class="<%= "active" if params[:action] == 'new' && params[:controller] == 'dedications' %>"><%= link_to 'Dedication List', new_dedication_path %></li>
          <li class="<%= "active" if params[:action] == 'new' && params[:controller] == 'brochures' %>"><%= link_to 'Brochure', new_brochure_path %></li>
        </ul>
      </div>
    </div>
  </div>
</div>

<script>
$(function () {

  var msie6 = $.browser == 'msie' && $.browser.version <= 7;

  if (!msie6) {
    var top = $('#main').offset().top - parseFloat($('#main').css('margin-top').replace(/auto/, 0));
    $(window).scroll(function (event) {
      // what the y position of the scroll is
      var y = $(this).scrollTop();

      if (y >= top) {
        $('#nav-box').addClass('fixed');
      } else {
        $('#nav-box').removeClass('fixed');
      }
    });
  }
});
</script>